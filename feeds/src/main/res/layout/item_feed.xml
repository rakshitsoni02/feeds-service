<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FeedArticle.View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_feed_title"
            style="@style/FeedArticle.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Elon Musk says Tesla can't yet launch in India" />


        <TextView
            android:id="@+id/tv_feed_description"
            style="@style/FeedArticle.Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="ABC Feeds" />

    </LinearLayout>

</androidx.cardview.widget.CardView>